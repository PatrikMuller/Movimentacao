@model IList<Movimentacao.Models.Bem>

@Html.ActionLink("Novo", "Form", "Bem");


<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Tombo</th>
            <th>Descrição</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
            {
            <tr>
                <td>@p.IdBem</td>
                <td>@p.Tombo</td>
                <td>@p.Descricao</td>
                <td>@p.Marca.Descricao</td>
                <td>@p.Modelo.Descricao</td>
                @*<td>@Html.ActionLink("Remover", "Remove", new { id = p.IdBem })</td>*@
                <td>@Html.ActionLink("Editar", "Form", new { id = p.IdBem })</td>
            </tr>
        }
    </tbody>
</table>
